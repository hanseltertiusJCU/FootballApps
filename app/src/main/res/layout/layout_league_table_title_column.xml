<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_grey_line"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/text_content_bold"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/position"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/text_content_bold"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/team_name"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/text_content_bold"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/games_played"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/text_content_bold"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/game_won"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/text_content_bold"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/game_tied"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/text_content_bold"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/game_lost"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/text_content_bold"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/goal_scored"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/text_content_bold"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/goal_conceded"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/text_content_bold"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/goal_difference"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/text_content_bold"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/pts"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_grey_line"/>

</LinearLayout>
