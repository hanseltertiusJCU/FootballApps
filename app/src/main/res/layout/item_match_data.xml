<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp">

            <TextView
                    android:id="@+id/league_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="League Name"/>

            <TextView
                    android:id="@+id/league_item_match_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="League Match Week"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/league_item_name"/>

            <TextView
                    android:id="@+id/league_item_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Date"
                    android:layout_alignParentEnd="true"/>

            <TextView
                    android:id="@+id/league_item_event_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Time"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/league_item_event_date"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

            <TextView
                    android:id="@+id/league_item_home_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Home Team Name"/>

            <LinearLayout
                    android:id="@+id/layout_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/league_home_team_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        app:layout_constraintLeft_toRightOf="@id/league_item_home_team_name"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                        android:id="@+id/league_item_versus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center_vertical"
                        android:text=":"
                        app:layout_constraintLeft_toRightOf="@id/league_home_team_score"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                        android:id="@+id/league_item_away_team_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        app:layout_constraintLeft_toRightOf="@id/league_item_versus"
                        app:layout_constraintBottom_toBottomOf="parent"/>


            </LinearLayout>

            <TextView
                    android:id="@+id/league_item_away_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Away Team Name"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>


        </RelativeLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>
